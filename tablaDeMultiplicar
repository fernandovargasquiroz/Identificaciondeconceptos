#include <iostream>
#include<stdlib.h>
#include<time.h>
using namespace std;

int main()
{

    int multiplicando, multiplicador,producto;
    srand(time(NULL));
    multiplicando=3;
    cout << "Aprendiendo a Multiplicar!" << endl;
    for(int i=0; i<20;i++ ){
        multiplicador=1+rand()%(11-1);
        cout << "Â¿Cuanto es " << multiplicando <<" x "<<multiplicador<<" ?"<<  endl;
        cin>>producto;
        if ((multiplicando*multiplicador)==producto){
           cout<<"Correcto!! "<< multiplicando <<" x "<<multiplicador<<" es "<< producto<< endl;
        } else {
           cout<<"No es Correcto, el resultado de   "<< multiplicando <<" x "<<multiplicador<<" es "<< producto<< endl;
           cout<<"No te desanimes sigue intentado!!"<< endl;
        }
   }

    return 0;
}
